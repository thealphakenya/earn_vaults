{
  // Rust Analyzer settings
  "rust-analyzer.cargo.runBuildScripts": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.hover.actions.debug": true,
  "rust-analyzer.hover.actions.gotoTypeDef": true,

  // Crates settings
  "crates.enableCargoWatcher": true,

  // Better TOML settings
  "better-toml.highlighting.enabled": true,

  // VSCode LLDB settings
  "lldb.expressions.command": "interpreter",
  "lldb.suppressMissingDirectoriesWarning": true,

  // Error Lens settings
  "errorLens.enabled": true,
  "errorLens.errorLevel": "error",
  "errorLens.warningLevel": "warning",
  "errorLens.infoLevel": "info",
  "errorLens.hintLevel": "hint",
  "errorLens.messageMaxChars": 200,

  // GitLens settings
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.statusBar.enabled": true,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,

  // Railway CLI settings (Ensure authentication)
  "railway.authToken": "YOUR_RAILWAY_AUTH_TOKEN",

  // REST Client settings
  "rest-client.showResponseInEditor": true,

  // Prettier settings
  "prettier.requireConfig": true,
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "none",

  // YAML settings
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*"
  },

  // VS Code settings
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Terminal settings
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",

  // Enable auto-save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // New Terminal Settings
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.files.save",
    "editor.action.formatDocument"
  ],
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.allowChords": true
}
