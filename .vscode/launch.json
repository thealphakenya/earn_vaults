{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Earn Vault (MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/earn_vault.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Earn Vault (Debug)",  // Ensure the debug build task is run first
      "miDebuggerPath": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/Common7/IDE/RemoteDebugger/miDbg.exe",  // Path to debugger (ensure the path is correct)
      "stopAtEntry": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for stdlib",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "externalConsole": false  // Set to true if you want to use an external terminal for debugging
    },
    {
      "name": "Run Earn Vault (Release - MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/release/earn_vault.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Build Earn Vault (Release)",  // Ensure the release build task is run first
      "stopAtEntry": false,
      "externalConsole": false  // Set to true if you want to use an external terminal for debugging
    }
  ]
}
