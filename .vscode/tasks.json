{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Earn Vault (Debug)",
      "type": "shell",
      "command": "cargo build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$rustc"],
      "detail": "Builds the Earn Vault app in debug mode using MSVC for Rust",
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "watch": {
        "files": [
          "${workspaceFolder}/src/**/*.rs"
        ]
      }
    },
    {
      "label": "Build Earn Vault (Release)",
      "type": "shell",
      "command": "cargo build --release",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$rustc"],
      "detail": "Builds the Earn Vault app in release mode using MSVC for Rust",
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "watch": {
        "files": [
          "${workspaceFolder}/src/**/*.rs"
        ]
      }
    },
    {
      "label": "Build Earn Vault (Debug) - MSVC",
      "type": "shell",
      "command": "cl",
      "args": [
        "/EHsc",
        "/Zi",
        "/DEBUG",
        "/D_DEBUG",
        "/Fo${workspaceFolder}/target/debug/",
        "/Fd${workspaceFolder}/target/debug/earn_vault.pdb",
        "/c",
        "${workspaceFolder}/src/**/*.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Builds the Earn Vault app in debug mode using MSVC for C++",
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "watch": {
        "files": [
          "${workspaceFolder}/src/**/*.cpp"
        ]
      }
    },
    {
      "label": "Build Earn Vault (Release) - MSVC",
      "type": "shell",
      "command": "cl",
      "args": [
        "/O2",
        "/DNDEBUG",
        "/Fo${workspaceFolder}/target/release/",
        "/Fd${workspaceFolder}/target/release/earn_vault.pdb",
        "/c",
        "${workspaceFolder}/src/**/*.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Builds the Earn Vault app in release mode using MSVC for C++",
      "dependsOn": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "clear": true
      },
      "watch": {
        "files": [
          "${workspaceFolder}/src/**/*.cpp"
        ]
      }
    },
    {
      "label": "Build C++ Code",
      "type": "shell",
      "command": "cl",
      "args": [
        "/EHsc",
        "/Zi",
        "/DEBUG",
        "/D_DEBUG",
        "/Fo${workspaceFolder}/target/debug/",
        "/Fd${workspaceFolder}/target/debug/cpp_debug.pdb",
        "/c", 
        "${workspaceFolder}/src/cpp/*.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$msCompile"],
      "detail": "Compiles C++ files inside Rust project"
    }
  ]
}
